<h1>Enter a new historical figure:</h1>

<form method="post" action="/figures">

  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br>
  <br>

  <label>Choose a Landmark</label>
    <% Landmark.all.each do |landmark| %>
   
    <p><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></input></p>
    <% end %>
  
  <br>

  <label>Enter a New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <br>
  <br>

  <label>Choose a Title</label>
    <% Title.all.each do |title| %>
    <p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input><p>
    <% end %>

  <br>
  
  <label>Enter a Title:</label>
  <input type="text" name="title[name]" id="new_title">

  <br>

  <input type="submit" value="Create New Figure">
</form>